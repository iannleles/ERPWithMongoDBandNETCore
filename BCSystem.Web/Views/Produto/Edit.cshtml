@model Produto

<h1>Editar Produto</h1>

<form asp-action="Edit" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" required>
    </div>
    <div class="form-group">
        <label for="CodigoProduto">Preço:</label>
        <input type="text" class="form-control" id="CodigoProduto" name="CodigoProduto" value="@Model.CodigoProduto" required>
    </div>
    <div class="form-group">
        <label for="Preco">Preço:</label>
        <input type="text" class="form-control" id="Preco" name="Preco" value="@Model.Preco" required>
    </div>
    <div class="form-group">
        <label for="PrecoVenda">Preço Venda:</label>
        <input type="text" class="form-control" id="PrecoVenda" name="PrecoVenda" value="@Model.PrecoVenda" required>
    </div>
    <div class="form-group">
        <label for="Categoria">Categoria:</label>
        <input type="text" class="form-control" id="Categoria" name="Categoria" value="@Model.Categoria" required>
    </div>
    <div class="form-group">
        <label for="Marca">Marca:</label>
        <input type="text" class="form-control" id="Marca" name="Marca" value="@Model.Marca" required>
    </div>    
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a class="btn btn-secondary" asp-action="Index">Voltar</a>

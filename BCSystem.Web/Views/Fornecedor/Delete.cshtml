@model Fornecedor

<h1>Excluir Fornecedor</h1>

<h3>Tem certeza de que deseja excluir este fornecedor?</h3>
<div>
    <h4>CPF/CNPJ: @Model.CPForCNPJ</h4>
    <h4>Nome: @Model.Nome</h4>
    <h4>Telefone: @Model.Telefone</h4>
    <h4>Email: @Model.Email</h4>
    <h4>CEP: @Model.Endereco.CEP</h4>
    <h4>Logradouro: @Model.Endereco.Logradouro</h4>
    <h4>Número: @Model.Endereco.Numero</h4>
    <h4>Complemento: @Model.Endereco.Complemento</h4>
    <h4>Bairro: @Model.Endereco.Bairro</h4>
    <h4>Cidade: @Model.Endereco.Cidade</h4>
    <h4>UF: @Model.Endereco.UF.UFSigla</h4>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
